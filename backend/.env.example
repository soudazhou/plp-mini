# LegalAnalytics Mini Backend Configuration
# Copy to .env and modify values for your environment

# Application Settings
APP_NAME="LegalAnalytics Mini"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# Security
SECRET_KEY="your-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database Configuration
DATABASE_URL="postgresql://dev:dev123@localhost:5432/legalanalytics"
DATABASE_ECHO=false

# Redis Configuration (SQS Alternative)
REDIS_URL="redis://localhost:6379/0"
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"

# Elasticsearch Configuration
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_INDEX_PREFIX="legalanalytics"

# File Storage Configuration (S3 Alternative)
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH="./storage"
LOCAL_STORAGE_BASE_URL="http://localhost:8000"

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""
AWS_SQS_QUEUE_URL=""
AWS_SNS_TOPIC_ARN=""

# Email Configuration (SNS Alternative)
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_TLS=false
SMTP_SSL=false
EMAIL_FROM="noreply@legalanalytics.com"

# CORS Configuration
CORS_ORIGINS="http://localhost:4200,http://localhost:3000"
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# API Configuration
API_V1_PREFIX="/api/v1"
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Performance Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
QUERY_CACHE_TTL=300  # 5 minutes